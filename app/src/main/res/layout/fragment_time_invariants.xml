        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/timeInvariant1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/timeInvariant1" />

    <EditText
        android:id="@+id/timeInvariant1"
